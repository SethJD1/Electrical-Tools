<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Tools.Rigging.RiggingFragment">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/type"
            style="@style/Base.Widget.AppCompat.Spinner"
            android:textColor="@android:color/white"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:background="@drawable/rounded_rectangle_green"
            android:popupBackground="@android:color/holo_green_dark"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5">
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:text="Amount"
            android:id="@+id/amount_label"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/equal_sign_two"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textAlignment="gravity"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:textColor="@android:color/white"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/amount"
            android:textAlignment="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:text="From"
            android:id="@+id/from_label"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/equal_sign_three"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textAlignment="gravity"
            android:gravity="center" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/from_quantity"
            android:layout_weight=".4"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:textColor="@android:color/white"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="To"
            android:textColor="@android:color/white"
            android:id="@+id/to_label"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/equal_sign_four"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/to_quantity"
            android:layout_weight=".4"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:textColor="@android:color/white"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75">
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/rounded_rectangle_blue">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Conversion"
                android:textColor="@android:color/white"
                android:id="@+id/phase_to_phase_label"
                android:layout_column="0"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:id="@+id/result"
                android:layout_column="0"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="gravity"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:id="@+id/result_details"
                android:layout_column="0"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="gravity"
                android:textStyle="bold" />
        </LinearLayout>
    </TableRow>

</TableLayout>
