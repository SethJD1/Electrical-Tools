<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Tools.Rigging.RiggingFragment">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/sling_image"
            android:src="@drawable/two_slings"
            android:scaleType="fitCenter"
            android:layout_weight="1" />
    </TableRow>

    <!-- Spacer -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25">
    </TableRow>

    <!-- Divider -->
    <View android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#A7A7A7"/>

    <!-- Spacer -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5">
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:text="# of Slings"
            android:id="@+id/number_of_slings_label"
            android:textAlignment="gravity"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/equal_sign_one"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textAlignment="gravity"
            android:gravity="center" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:id="@+id/number_of_slings"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:textColor="@android:color/white"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:text="Sling Length"
            android:id="@+id/sling_length_label"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/equal_sign_two"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textAlignment="gravity"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:textColor="@android:color/white"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/sling_length"
            android:textAlignment="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:text="Sling Height"
            android:id="@+id/sling_height_label"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/equal_sign_three"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textAlignment="gravity"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:textColor="@android:color/white"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/sling_height"
            android:textAlignment="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Load Weight"
            android:textColor="@android:color/white"
            android:id="@+id/load_weight_label"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/equal_sign_four"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:ems="10"
            android:id="@+id/load_weight"
            android:textAlignment="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/rounded_rectangle_blue">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:text="Load Per Sling"
                android:id="@+id/load_per_sling_label"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="gravity"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/load_per_sling"
                android:textColor="@android:color/white"
                android:textAlignment="gravity"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textSize="26sp" />
        </LinearLayout>
    </TableRow>

</TableLayout>
